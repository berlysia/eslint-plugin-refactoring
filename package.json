{
  "name": "@berlysia/eslint-plugin-refactoring",
  "version": "0.0.0",
  "description": "ESLint plugin for progressive refactoring",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin"
  ],
  "author": "berlysia",
  "main": "index.js",
  "scripts": {
    "lint": "eslint '**/*.{js,ts,jsx,tsx}'",
    "lint:fix": "npm-run-all 'lint -- --fix'",
    "format": "prettier --write '**/*.{json,md}'",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@berlysia/eslint-config": "^1.2.0",
    "del-cli": "^3.0.0",
    "eslint": "^6.7.0",
    "eslint-plugin-eslint-plugin": "^2.1.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1"
  }
}
